{
  // Workspaces
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
            "*": [1, 2, 3, 4, 5]
    }
  },
  // Taskbar
  "wlr/taskbar": {
    "format": "{}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": [
      "Alacritty",
      "kitty"
    ],
  },
  // Hyprland Window
  "hyprland/window": {
    "max-length": 60,
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true
  },
  // Empty
  "custom/empty": {
    "format": ""
  },
  // Tools
  "custom/tools": {
    "format": "ÔóΩ",
    "tooltip-format": "Tools"
  },

  "mpris": {
	"format": "{player_icon} {dynamic}",
	"format-paused": "{status_icon} <i>{dynamic}</i>",
	"interval": 1,
	"player-icons": {
		"default": "‚è∏",
		"mpv": "üéµ"
	},
	"status-icons": {
		"paused": "‚ñ∂"
	},
	// "ignored-players": ["firefox"]
  },

  "custom/spotify-image": {
    "exec": "echo '/home/mmzim/.cache/spotify/cover/current_spotify_art.jpg' ",
    "interval": 1,
    "format": " ",
    "tooltip": false,
  },

  // Cliphist
  "custom/cliphist": {
    "format": "ÔÉ™",
    "on-click": "sleep 0.1 && ~/.userconfig/scripts/cliphist.sh",
    "on-click-right": "sleep 0.1 && ~/.userconfig/scripts/cliphist.sh d",
    "on-click-middle": "sleep 0.1 && ~/.userconfig/scripts/cliphist.sh w",
    "tooltip-format": "Left: Open clipboard Manager\nRight: Delete an entry\nMiddle: Clear list"
  },

  // Updates Count
  "custom/updates": {
    "format": "ÔÜ≤  {}",
    "escape": true,
    "return-type": "json",
    "exec": "~/.userconfig/scripts/updates/updates.sh",
    "interval": 1800,
    "signal": 1,
    "hide-empty-text": true,
    "on-click": "kitty -e ~/.userconfig/scripts/updates/installupdates.sh"
  },
  // Wallpaper
  "custom/wallpaper": {
    "format": "ÔÄæ",
    "on-click": "bash -c waypaper &",
    "on-click-right": "~/.userconfig/scripts/wallpaper-effects.sh",
    "tooltip-format": "Left: Select a wallpaper\nRight: Select wallpaper effect"
  },
  // Waybar Themes
  "custom/waybarthemes": {
    "format": "ÔÖÅ",
    "on-click": "~/.userconfig/scripts/themeswitcher.sh",
    "tooltip-format": "Select a waybar theme"
  },
  // Keybindings
  "custom/keybindings": {
    "format": "ÔÑú",
    "on-click": "~/.userconfig/scripts/keybindings.sh",
    "tooltip": false
  },
  // Calculator
  "custom/calculator": {
    "format": "Ôá¨",
    "on-click": "qalculate-gtk",
    "tooltip-format": "Open calculator"
  },
  // Power Menu
  "custom/exit": {
    "format": "ÔÄë",
    "on-click": "~/.userconfig/scripts/wlogout.sh",
    "on-click-right": "hyprlock",
    "tooltip-format": "Left: Power menu\nRight: Lock screen"
  },
  // SwayNC
  "custom/notification": {
    "tooltip-format": "Left: Notifications\nRight: Do not disturb",
    "format": "{icon}",
    "format-icons": {
      "notification": "Û∞Çö",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Çõ",
      "dnd-none": "Û∞Çõ",
      "inhibited-notification": "Û∞Çö",
      "inhibited-none": "Û∞Çú",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": "Û∞Çõ"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  // Hyprshade
  "custom/hyprshade": {
    "format": "Óìú",
    "tooltip-format": "Toggle Screen Shader",
    "on-click": "sleep 0.5; ~/.userconfig/scripts/hyprshade.sh",
    "on-click-right": "sleep 0.5; ~/.userconfig/scripts/hyprshade.sh rofi"
  },
  // Hypridle inhibitor
  "custom/hypridle": {
    "format": "ÔÄ£",
    "return-type": "json",
    "escape": true,
    "exec-on-event": true,
    "interval": 60,
    "exec": "~/.userconfig/scripts/hypridle.sh status",
    "on-click": "~/.userconfig/scripts/hypridle.sh toggle"
  },
  // Keyboard State
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  // System tray
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },
  // Clock
  "clock": {
        "format": "{:%I:%M %p - %Om/%Od/%Y}",
    "on-click": "flatpak run com.hypr.calendar",
    "timezone": "",
    "tooltip": false
  },
  // System
  "custom/system": {
    "format": "Óë≥",
    "tooltip": false
  },
  // CPU
  "cpu": {
    "format": "/ C {usage}% ",
    "on-click": "~/.userconfig/scripts/system-monitor.sh"
  },
  // Memory
  "memory": {
    "format": "/ M {}% ",
    "on-click": "~/.userconfig/scripts/system-monitor.sh"
  },
  // Harddisc space used
  "disk": {
    "interval": 30,
    "format": "D {percentage_used}% ",
    "path": "/",
    "on-click": "~/.userconfig/scripts/system-monitor.sh"
  },
  "hyprland/language": {
    "format": "/ K {short}"
  },
  // Group Hardware
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": [
      "custom/system",
      "disk",
      "cpu",
      "memory",
      "hyprland/language"
    ]
  },
  // Group Tools
  "group/tools": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": [
      "custom/tools",
      "custom/hypridle",
      "custom/hyprshade",
    ]
  },
  // Group Links
  "group/links": {
    "orientation": "horizontal",
    "modules": [
      "custom/chatgpt",
      "custom/empty"
    ]
  },

  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "Ôá´ {signalStrength}%",
    "format-ethernet": "Û∞àÄ {ifname}",
    "format-disconnected": "Disconnected ‚ö†",
    "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": "Û∞àÄ {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "~/.userconfig/scripts/networkmanager.sh",
    "on-click-right": "~/.userconfig/scripts/nm-applet.sh toggle",
  },
  // Battery
  "battery": {
    "interval": 1,
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "ÔÉß {capacity}%",
    "format-plugged": "ÔÉß {capacity}%",
    "format-alt": "{icon}  {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": [
      "ÔâÑ ",
      "ÔâÉ ",
      "ÔâÇ ",
      "ÔâÅ ",
      "ÔâÄ "
    ]
  },
  // TLP Power Management
  "custom/tlp": {
    "format": "{}",
    "return-type": "json",
    "interval": 1,
    "exec": "/home/mmzim/.userconfig/scripts/waybar/tlp-status.sh",
    "tooltip": true
  },
  // Pulseaudio
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö© {format_source}",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "Ôñê ",
      "headset": "Óπô ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ ",
      "default": [
        "ÔÄ¶",
        "ÔÄ®",
        "ÔÄ®"
      ]
    },
    "on-click": "pavucontrol"
  },
  // Bluetooth
  "bluetooth": {
    "format": "Ôäì {status}",
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "sleep 0.1 && blueman-manager",
    "format-no-controller": ""
  },

    // Group Settings
  "group/settings": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": [
      "custom/tlp",
      "bluetooth",
      "network"
    ]
  },
  // Other
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false
  },
  // backlight:
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": [
      "Óéç",
      "Óèî",
      "Óèì",
      "Óèí",
      "Óèë",
      "Óèê",
      "Óèè",
      "Óèé",
      "Óèç",
      "Óèå",
      "Óèã",
      "Óèä",
      "Óèâ",
      "Óèà",
      "Óéõ"
    ],
    "scroll-step": 1
  }
}
