#!/bin/bash

# Wrapper script to run git-sync.sh from anywhere
# Usage: gsync [commit message]

REPO_DIR="/home/mmzim/.userconfig"

# Check if repository directory exists
if [ ! -d "$REPO_DIR" ]; then
    echo "Error: Repository directory $REPO_DIR not found"
    exit 1
fi

# Change to repository directory and run git-sync.sh
cd "$REPO_DIR" || exit 1
./git-sync.sh "$@"
